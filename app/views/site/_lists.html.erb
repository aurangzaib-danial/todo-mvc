<header class="header">

  <%= form_with model: @list, local: true do |list_form| %>
    <%= main_field list_form, :title, 'Make a new list' %>
  <% end %>

</header>


<section class="main">

  <ul class="todo-list">
    <%= render partial: 'lists/list_li', collection: current_user.lists, as: :list %>
  </ul>

</section>
