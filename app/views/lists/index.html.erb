<section class="todoapp">
  
  <header class="header">
    <h1>Your Lists</h1>
    
    <%= form_for @list do |f| %>
      <%= f.text_field :title, class: 'new-todo', placeholder: 'Make a new list', autofocus: true %>
    <% end %>

  </header>

  <section class="main">

    <ul class="todo-list">
      
      <% @lists.each do |list| %>

        <li>
          <div class="view">
            <label><%= link_to list.title, list %></label>
          </div>
        </li>

      <% end %>

    </ul>

  </section>

</section> <!-- todoapp -->

